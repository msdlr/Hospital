                           />
                    <ComboBox Name="Viejahabitaciones"  HorizontalAlignment="Left" Margin="93,69,0,0" 
                              VerticalAlignment="Top" Width="57" />
                        -->

                </Grid>
            </TabItem>
            <!-- Habitaciones -->
            <!-- Bordes para las 6 habitaciones -->







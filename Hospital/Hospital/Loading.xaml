<Window x:Class="Hospital.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="Cargando..." Height="80" Width="300">


    <Grid>
        <ProgressBar Name="progreso" HorizontalAlignment="Center" Height="25" Margin="0" VerticalAlignment="Center" Width="270">
            <ProgressBar.Triggers>
                <EventTrigger RoutedEvent="ProgressBar.Loaded">
                    <BeginStoryboard>
                        <Storyboard x:Name="sb" Completed="progreso_Completed">
                            <DoubleAnimation Duration="00:00:02" To="100" Storyboard.TargetProperty="Value"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </ProgressBar.Triggers>
        </ProgressBar>
    </Grid>
</Window>
